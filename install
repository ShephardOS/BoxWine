#!/bin/bash

set -e  # Exit on error

Detect platform

if [ -n "$(command -v termux-info)" ]; then PLATFORM="Android" elif [ -n "$(uname -a | grep -i linux)" ]; then PLATFORM="Linux" else echo "Platform not supported" exit 1 fi

echo "=== Installing BoxWine on $PLATFORM ==="

Install dependencies

if [ "$PLATFORM" == "Linux" ]; then sudo apt update && sudo apt install -y build-essential git cmake xorg x11-utils libx11-dev sudo apt install -y wine winetricks dxvk box64 box86 elif [ "$PLATFORM" == "Android" ]; then pkg update && pkg install -y git cmake make clang x11-repo pkg install -y wine box64 box86 # Install Turnip drivers git clone https://github.com/mesa3d/mesa.git ~/mesa && cd ~/mesa mkdir -p build && cd build meson .. -Dgallium-drivers=turnip -Dvulkan-drivers=turnip ninja install cd ~ && rm -rf ~/mesa fi

Clone BoxWine

cd ~ git clone https://github.com/ptitSeb/boxwine.git cd boxwine

Build

mkdir -p build && cd build cmake .. make -j$(nproc)

Install

if [ "$PLATFORM" == "Linux" ]; then sudo make install elif [ "$PLATFORM" == "Android" ]; then mkdir -p ~/bin cp boxwine ~/bin/ echo 'export PATH="$HOME/bin:$PATH"' >> ~/.bashrc source ~/.bashrc fi

Verify installation

echo "=== Verifying installation ===" boxwine --version

echo "Installation complete! Use 'boxwine' to start."



