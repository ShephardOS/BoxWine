#!/data/data/com.termux/files/usr/bin/bash

# Обновление и установка базовых пакетов
pkg update -y
pkg install x11-repo -y
pkg install termux-x11-nightly -y
pkg install pulseaudio -y
pkg install wget -y
# Установка XFCE4 окружения
pkg install xfce4 -y

# Установка Chromium (опционально)
pkg install tur-repo
pkg install chromium

# Установка VS Code (опционально)
pkg install code-oss

# Скачивание скрипта запуска XFCE4
wget https://raw.githubusercontent.com/ShephardOS/Termux-Desktops/main/scripts/termux_native/startboxwine_termux.sh
chmod +x startboxwine_termux.sh

# Скачивание и установка Mobox launcher скрипта
cd ~
wget https://raw.githubusercontent.com/ShephardOS/Termux-Desktops/main/scripts/termux_native/boxwine_run.sh
mv boxwine_run.sh boxwine
chmod +x boxwine

# Скачивание ярлыка для рабочего стола
mkdir -p ~/Desktop
cd ~/Desktop
wget https://raw.githubusercontent.com/ShephardOS/Termux-Desktops/main/scripts/termux_native/BoxWineExplorer.desktop
cd ~

echo
echo "Установка завершена!"
echo "Запуск XFCE4: ./startboxwine_termux.sh"
echo "Запуск Wine Explorer: ./boxwine explorer"
